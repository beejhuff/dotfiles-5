# Load Boxen
[ -f /opt/boxen/env.sh ] && source /opt/boxen/env.sh

# Set default Node version
export BOXEN_NVM_DEFAULT_VERSION=v0.10

# NVM
#source /opt/boxen/nvm/nvm.sh

# Node packages
#export PATH=$PATH:/opt/boxen/nvm/v0.10.0/bin

# PHP
export PATH="$(brew --prefix josegonzalez/php/php54)/bin:$PATH"

# Android SDK
export PATH=$PATH:$HOME/Applications/android-sdks/platform-tools

# EC2
export JAVA_HOME=`/usr/libexec/java_home`
export EC2_HOME=/opt/boxen/homebrew/Cellar/ec2-api-tools/1.6.7/jars
export PATH=/opt/boxen/homebrew/Cellar/ec2-api-tools/1.6.7/bin:$PATH

# Phabricator / Arcanist
export PATH=$PATH:$HOME/Applications/phabricator/arcanist/bin

### Heroku Toolbelt
